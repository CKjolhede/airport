require 'rails_helper'

RSpec.describe Airline, type: :feature do
    describe 'Index Page' do
        before each
            @airline1=Airline.create!(name: 'Alpha', delays: false, rating: 2)
            @airline2=Airline.create!(name: 'Conurbation ', delays: true, rating: 4)
            @airline3-Airline.create!(name: 'North East' delays: false, rating: 7)
        visit '/airlines'
        end
        
        it 'shows the name of each airline in the system' do
            expect(page).to have_content(@airline1.name)
            expect(page).to have_content(@airline2.name)
            expect(page).to have_content(@airline3.name)
        end
    end
end